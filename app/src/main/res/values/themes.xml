<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GESTORADETFG" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cabeceras</item>
        <item name="colorPrimaryVariant">@color/cabeceras</item>
        <item name="colorOnPrimary">@color/fondo</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here.-->



        <!-- Estilo de todos los editText y Combo.
        <item name="editTextStyle">@style/Widget.AppCompat.EditText.GESTORADE</item>
        <item name="checkedTextViewStyle">@style/Widget.AppCompat.TextView.GESTORADE</item>-->


        <item name="android:textColor">@color/purple_200</item>
        <item name="android:textColorHint">@color/purple_200</item>
        <item name="android:fontFamily">@font/font_normal</item>
        <item name="android:textSize">16dp</item>

    </style>

    <style name="btnTheme" parent="Theme.GESTORADETFG">
        <item name="colorPrimary">@color/colorBtn</item>
        <item name="colorOnPrimary">@color/letraOscura</item>

    </style>




       <style name="Widget.AppCompat.EditText.GESTORADE" parent="Widget.AppCompat.EditText">
           <item name="android:textColor">@color/letraOscura</item>
           <item name="android:textColorHint">@color/letraOscura</item>
           <item name="android:fontFamily">@font/font_normal</item>
       </style>


    <style name="Widget.AppCompat.TextView.GESTORADE" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/y</item>
        <item name="android:textColorHint">@color/y</item>
        <item name="android:fontFamily">@font/font_normal</item>
    </style>



</resources>